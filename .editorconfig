# .editorconfig â€” keep coding styles consistent across editors
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown often uses two trailing spaces for line breaks
[*.md]
trim_trailing_whitespace = false

# Common languages/files in this project
[*.{ts,tsx,js,jsx,json,yml,yaml,scss,css,html}]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Python (if present)
[*.py]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab

# Keep patches' spaces intact
[*.patch]
trim_trailing_whitespace = false
